generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["property"]
}

model Property {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  bathrooms        Int
  bedrooms         Int
  city             String
  country          String
  homeStatus       String
  homeType         String
  imgSrc           String
  isUnmappable     Boolean
  latitude         Float
  livingArea       Float
  longitude        Float
  lotAreaUnit      String
  lotAreaValue     Float
  price            Float
  priceForHDP      Float
  rentZestimate    Float
  state            String
  streetAddress    String
  taxAssessedValue Float
  zestimate        Float
  zipcode          String
  zpid             Int      @unique

  @@schema("property")
}

model HouseDetails {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  price              Int
  abbreviatedAddress String
  city               String
  state              String
  zipcode            Int
  bedrooms           Int
  bathrooms          Int
  livingArea         Float
  longitude          Float
  latitude           Float
  hiResImageLink     String
  description        String
  responsivePhotos   Json      // JSON field to store an array of photo URLs
  priceHistories     PriceHistory[]

  @@schema("property")
}

model PriceHistory {
  id         Int      @id @default(autoincrement())
  date       DateTime
  price      Float
  houseId    Int      
  house      HouseDetails  @relation(fields: [houseId], references: [id])
  
  @@schema("property")
  @@index([houseId])
}

model User {
  id          Int      @id @default(autoincrement()) @unique
  username    String
  password    String
  email       String   @unique
  createdAt   DateTime @default(now())

  @@schema("property")
}
